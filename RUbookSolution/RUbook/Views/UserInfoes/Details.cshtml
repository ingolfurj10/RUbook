@model RUbook.Models.ApplicationUser
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Details";
}


<h2>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h2>
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="col-md-3">
        @if (Model.Image == null || Model.Image == "")
        {
            <img src="http://kairoschurch.org/wp-content/uploads/2013/09/default_profile-d80441a6f25a9a0aac354978c65c8fa91-e1379912288150.jpg" alt="Friend Photo" />
        }
        else
        {
            <img src="@Html.DisplayFor(model =>model.Image)" alt="Friend Photo" class="img-rounded" />
        }

        <br/>
    </div>


    <div class="col-md-6">
        <form class="panel panel-collapse">
            <dl class="dl-horizontal">
                <dt>
                    @Html.LabelFor(model => model.DateOfBirth, "Date of Birth")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DateOfBirth)
                </dd>
                <dt>
                    @Html.LabelFor(model => model.Email, "Email")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>
                @*<dt>
                        @Html.LabelFor(model => model.Phone, "Phone Number")
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Phone)
                    </dd>*@
                <dt>
                    @Html.LabelFor(model => model.Department, "Department")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Department)
                </dd>
                <dt>
                    @Html.LabelFor(model => model.Education, "Education Information")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Education)
                </dd>
                <dt>
                    @Html.LabelFor(model => model.WorkInfo, "Work Information")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.WorkInfo)
                </dd>
            </dl>
        </form>
    </div>


    <div class="col-md-3">
        @{
            
            var user = User.Identity.GetUserId();
            
            if( user == Model.Id)
            { 
                <!-- hérna vatnar að athuga hver er að skoða síðuna-->
                <button type="button" class="btn btn-info">@Html.ActionLink("Edit", "Edit", new { id = user }) </button>
            }
            else
            { 
                <!--hérna vantar action link sem addar friend-->
                <button type="button" class="btn btn-primary btn-block">@Html.ActionLink("Follow Friend", "Create", "Friends", new { id = Model.Id }, null) </button>
            }
        }
    </div>
</div>


