@model IEnumerable<RUbook.Models.UserInfo>

@{
    ViewBag.Title = "Index";
}

<h2>Users</h2>


<table class="table">
  
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.FirstName + " " + item.LastName, "Details", new { id = item.ID })
        </td>
        <td>
            <!-- hérna vantar if ef þeir eru vinur þá gerist eitthvað annað-->
            @Html.ActionLink("Send Friend request", "AddFriend", new { id=item.ID })
        </td>
    </tr>
}

</table>
