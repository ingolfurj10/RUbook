@model IEnumerable<RUbook.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<h2>Users</h2>


<p>
    @Html.ActionLink("Create New User", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        
        <th></th>
    </tr>

<table class="table">
  
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.FirstName + " " + item.LastName, "Details", new { id = item.Id })
        </td>
        <td>
            <!-- hérna vantar if ef þeir eru vinur þá gerist eitthvað annað-->
            <!--hérna vantar virkni líka-->
            @Html.ActionLink("Send Friend request", "AddFriend", new { id=item.Id })
        </td>
    </tr>
}

</table>
