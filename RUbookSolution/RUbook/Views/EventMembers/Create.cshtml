@model RUbook.Models.ViewModels.EventMemberViewModel

@{
    ViewBag.Title = "Attend Event";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Join Group</h3>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <div class="col-md-10">
                @*@Html.DisplayFor(model => model.UserID.FirstName)
                    @Html.HiddenFor(model => model.UserID.Id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserID.Id, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div>
            <h4>You are here because you want to attend this event</h4>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.DisplayFor(model => model.EventName)
                @Html.HiddenFor(model => model.EventId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EventId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Attend Event" class="btn btn-default" />
                <p class="help-block">Press the Join Event button above to Attend the Group!</p>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List of All Events", "Index", "Events")
</div>
