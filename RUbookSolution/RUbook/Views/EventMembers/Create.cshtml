@model RUbook.Models.EventMember

@{
    ViewBag.Title = "Attend Event";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Attend Event</h3>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10">
                @Html.DisplayFor(model => model.UserID.FirstName)
                @Html.HiddenFor(model => model.UserID.Id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserID.Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            <h4>You are here because you want to Attend the Event</h4>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.DisplayFor(model => model.EventID.Name)
                @Html.HiddenFor(model => model.EventID.ID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EventID.ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Join Group" class="btn btn-default" />
                <p class="help-block">Press the Join Group button above to Attend the Event!</p>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List of All Events", "Index", "Events")
</div>
