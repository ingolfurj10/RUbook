@model RUbook.Models.Friend

@{
    ViewBag.Title = "Create";
}

<h2>Send a message and start following user</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Friend</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        
        @Html.TextAreaFor(model => model.UserId.Id, new { @class = "newpost", rows = 3, cols = 55, placeholder = "This person started following you!" })




        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserId.Id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserId.Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.FriendUserID.Id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FriendUserID.Id, "", new { @class = "text-danger" })

            </div>
        </div>
        
       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Follow user and send message" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
