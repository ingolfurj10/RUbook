@model RUbook.Models.Friend

@{
    ViewBag.Title = "Create";
}

<h2>Start Following user</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10">
                <p class="help-block">If you want you can send the person you are following a message to request a follow back!<p>
                @Html.LabelFor(model => model.UserId.FirstName, "", htmlAttributes: new { @class = "control-label" })
                <div>
                    @*<p>Hérna vantar að setja skilaboðabox ef við fáum það til að virka</p>*@
                    @Html.TextAreaFor(model => model.UserId.FirstName, new { @class = "newpost", rows = 3, cols = 55, placeholder = "Say Something..." })
                </div>
                </div>
            </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <p></p>
                        @Html.DisplayFor(model => model.UserId.FirstName)
                        @Html.HiddenFor(model => model.UserId.Id, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserId.Id, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <h4>You are here because you want to follow your Friend:</h4>
                        @Html.DisplayFor(model => model.FriendUserID.FirstName)
                        @Html.HiddenFor(model => model.FriendUserID.Id, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FriendUserID.Id, "", new { @class = "text-danger" })

                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-10">
                        <p class="help-block">Press the Follow button below to start following user!</p>
                        <input type="submit" value="Follow" class="btn btn-default" />
                    </div>
                </div>
            </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
