                        <a href="#" class="list-group-item">Event 2</a>
                    </ul>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group">
                    @Html.TextAreaFor(model => model.text, new { @class = "newpost", rows = 3, cols = 55, placeholder = "Something on your mind?" })
                    <div class="form-group">
                        <div>
                            <input type="submit" value="Create" class="btn btn-info" />
                        </div>
                    </div>
                </div>
            </div>

