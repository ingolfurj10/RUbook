@model RUbook.Models.Post


@{
    ViewBag.Title = "Create a new Post for Timeline";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-3">
                
            </div>
            <div class="col-md-6">
                <h3>Create a new Post for Timeline</h3>
                <div class="input-group">
                    @Html.TextAreaFor(model => model.Text, new { @class = "newpost", rows = 3, cols = 55, placeholder = "Something on your mind?" })
                    @Html.HiddenFor(model => model.GroupID)
                    @Html.HiddenFor(model => model.EventID)
                    <div class="form-group">

                        @Html.LabelFor(model => model.Image, "", htmlAttributes: new { @class = "control-label" })
                        <p class="help-block">Here you can insert a link for a photo to follow your post Timeline</p>
                        <div>
                            @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control", placeholder = "Insert a Source Link" } })
                            @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br/>
                    <div class="form-group">
                        <br />
                        <div>
                            <input type="submit" value="Post Text/Image" class="btn btn-default" />
                        </div>
                    </div>
                </div>

                
            </div>   
        </div>

    
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
