@model IEnumerable<RUbook.Models.Event>

@{
    ViewBag.Title = "All Events";
}

<h2>All Events</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
        
            @Html.DisplayNameFor(model => model.DateOfEvent)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Details", new { id = item.ID })
        </td>
        <td>
          
            @Html.DisplayFor(modelItem => item.DateOfEvent)
        </td>
        <td>
            @Html.ActionLink("Attend Event", "Create", "EventMembers", new { id = item.ID }) 
           
        </td>
        <td>
            @if (DateTime.Now > item.DateOfEvent)
            {
                <p>Past event</p>
            }
            
        </td>
    </tr>
}

</table>
