@model RUbook.Models.Event

@{
    ViewBag.Title = "Create Event";
}

<h2>Create Event</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-md-3">
            <div>
                <img src="https://beta.mssociety.ca/images/event-default.jpg" alt="Event Photo" class="img-rounded" style="width:216px;height:173px" />
            </div>
            
        </div>
 
        <div class="col-md-6">
            <div class="form-group">                
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control", placeholder = "Insert a Source Link" } })
                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                    <p class="help-block">Here you can choose a picture for your Event</p>
                </div>
            </div>

            <div class="form-group">
             <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name of Event" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
               <div class="col-md-10">
                    @Html.EditorFor(model => model.DateOfEvent, new { htmlAttributes = new { @class = "form-control", placeholder = "Date of Event" } })
                   <p class="help-block">Please use the format - dd.mm.yyyy</p>
                    @Html.ValidationMessageFor(model => model.DateOfEvent, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
               <div class="col-md-10">
                    @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control", placeholder = "Description" } })
                    @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                </div>
            </div>

          
            <div class="form-group">
               <div class="col-md-10">
                    @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control", placeholder = "Location" } })
                    @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                </div>
            </div>

            

            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Create Event" class="btn btn-default" />
                </div>
            </div>
            <div>
                @Html.ActionLink("Cancel", "Index", "Home")
            </div>
        </div>

        <div class="col-md-3">
        </div>
  </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


