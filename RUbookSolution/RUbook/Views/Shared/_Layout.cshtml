<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - RUbook</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Navbar.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/calendar.css" />
    <link href="~/Content/Clock.css" rel="stylesheet" />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script type="text/javascript" src="~/Scripts/calendar.js"></script>
    <script type="text/javascript" src="~/Scripts/Clock.js"></script>
    @using Microsoft.AspNet.Identity;

    <meta name="RUbook" content="Social media for students and faculty of The University of Reykjavík" />
    <meta name="description" content="Social media for students and faucilty of The University of Reykjavík" />
</head>

<body>
    <div class="navbar  navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("RUbook", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(" ", "Index", "Home", null, new { id = "desktop", @class = "fa fa-home" })</li>
                    <li>@Html.ActionLink(" Timeline", "Index", "Home", null, new { id = "mobile", @class = "fa fa-home" })</li>
                    <li>@Html.ActionLink(" ", "Details", "UserInfoes", new { id = User.Identity.GetUserId() }, new { id = "desktop", @class = "fa fa-user" })</li>
                    <li>@Html.ActionLink(" My Profile", "Details", "UserInfoes", new { id = User.Identity.GetUserId() }, new { id = "mobile", @class = "fa fa-user" })</li>
                    <li>@Html.ActionLink(" All Groups", "Index", "Groups", null, new { id = "desktop", @class = "fa fa-users" })</li>
                    <li>@Html.ActionLink(" All Groups", "Index", "Groups", null, new { id = "mobile", @class = "fa fa-users" })</li>
                    <li>@Html.ActionLink(" ", "Index", "Events", null, new { id = "desktop", @class = "fa fa-calendar" })</li>
                    <li>@Html.ActionLink(" All Events", "Index", "Events", null, new { id = "mobile", @class = "fa fa-calendar" })</li>
                    <li>@Html.ActionLink(" All Users", "Index", "UserInfoes", null, new { id = "desktop", @class = "fa fa-users" })</li>
                    <li>@Html.ActionLink(" All Users", "Index", "UserInfoes", null, new { id = "mobile", @class = "fa fa-users" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <div>
        <footer>
            <br />
            <div class="footer-RUbook">
                <p class="help-block">&copy; @DateTime.Now.Year - RUbook - Social media for students and faculty of The University of Reykjavík</p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryUI")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/scripts.js"></script>
</body>
</html>

@*<div class="col-md-3 col-md-pull-6 col-sm-6">*@