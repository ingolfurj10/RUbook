@model RUbook.Models.Group

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<div>

    <h4>@Html.DisplayFor(model => model.Text)</h4>

    <hr />

    <div class="col-md-3">

        <!--Þessi if setning er ekki alveg að virka eins og hún á að gera, birtir aldrei default myndina-->

        @if (@Html.DisplayFor(model => model.Image) == null)
        {
            <img src="https://d18qs7yq39787j.cloudfront.net/public/defaults/default_group.png" alt="Group photo" style="width:299px; height:228px" />

        }

        else
        {
            <img src="@Html.DisplayFor(model =>model.Image)" alt="Group photo" style="width:299px; height:228px" />
           
        }
        

    </div>

    <div class="col-md-6">

        <dl class="dl-horizontal">
            <dt>
                @Html.LabelFor(model => model.Name, "Name of Group")

            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            
            <dt>
                @Html.LabelFor(model => model.Text, "Description")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Text)
            </dd>
            <dt>
                @Html.LabelFor(model => model.Course, "Course")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Course)
            </dd>

            <!--hérna mætti tengja departmentID við líka-->

        </dl>

        <p> Hérna viljum við að group posts komi</p>
    </div>

    <div class="col-md-3">
        <div>
            <button type="button" class="btn btn-default">@Html.ActionLink("Create Group", "Create", "Groups")</button>
            <button type="button" class="btn btn-default">@Html.ActionLink("Create Event", "Create", "Events")</button>
        </div>

        <br />
        <br />

        <div class="panel panel-default">
            <div class="panel-heading">Attending Event</div>

            <ul class="list-group">

                <!--Linkur á notanda sem er skráðður í event-->
                <a href="#" class="list-group-item">Notandi 1</a>
                <a href="#" class="list-group-item">Notandi 2</a>

            </ul>
        </div>

        <br />
        <br />

    </div>


</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
