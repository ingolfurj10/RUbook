@model IEnumerable<RUbook.Models.Group>

@{
    ViewBag.Title = "All Groups";
}

<h2>All Groups</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Details", new { id = item.ID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text, "Description")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course)
        </td>
        <td>
            <!--Hérna vantar virkni fyrir að joina Group-->
            @Html.ActionLink("Checkout group", "Details", new { id = item.ID }) 
            
        </td>
    </tr>
}

</table>
