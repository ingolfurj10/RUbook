@model RUbook.Models.Group

@{
    ViewBag.Title = "Create Group";
}

<h2>Create Group</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="col-md-3">
            <div>
                <img src="https://d18qs7yq39787j.cloudfront.net/public/defaults/default_group.png" alt="Group Photo" class="img-rounded" style="width:216px;height:173px" />
            </div>            
        </div>




        <div class="col-md-6">
            <div class="form-group">                
                <div>
                    @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control", placeholder = "Insert a Source Link" } })
                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                    <p class="help-block">Here you can choose a picture for your Group</p>
                </div>
            </div>

            <div class="form-group">
                <div>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name of Group" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control", placeholder = "Description" } })
                    @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    @Html.EditorFor(model => model.Course, new { htmlAttributes = new { @class = "form-control", placeholder = "Department" } })
                    @Html.ValidationMessageFor(model => model.Course, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div>
                    <input type="submit" value="Create Group" class="btn btn-default" />
                </div>
            </div>

            <div>
                @Html.ActionLink("Cancel", "Index", "Home")
            </div>
        </div>



        <div class="col-md-3">
        </div>

    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
